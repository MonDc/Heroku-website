    <!-- adding form for Ads -->
    <br>
    <div class="container">
      <!-- Material form contact -->
      <div class="row">


        <div class="card col-6 ">

          <h5 class="card-header info-color white-text text-center py-4">
            <strong>Enter a new ad</strong>
          </h5>

          <!--Card content-->
          <div class="card-body px-lg-5 pt-0">

            <!-- Form -->
            <form class="text-center " style="color: #757575;" method="POST" action="/admin/newadv" enctype="multipart/form-data">

              <!-- Name -->
              <div class="md-form mt-3">
                <label for="materialContactFormName">Title</label>
                <input type="text" placeholder="Add title" name="title" id="materialContactFormName"
                  class="form-control">

              </div>

              <!-- keywords -->
              <div class="md-form mt-3">
                <label for="materialContactFormName">Key words</label>
                <input type="text" name="keyword" placeholder="Key words" id="materialContactFormName"
                  class="form-control">

              </div>

              <!--description-->
              <div class="md-form">
                <label for="materialContactFormMessage">Description</label>
                <textarea name="description" id="materialContactFormMessage" placeholder="Add the description"
                  class="form-control md-textarea" rows="3"></textarea>

              </div>


              <!-- category -->
              <label for="materialContactFormMessage">Category</label>

              <select id="newcategory" class="mdb-select" name="category">
              <%for(let i=0; i<result.length; i++){%>
                
                <option value="<%=result[i]._id%>"><%=result[i].title%></option>
              
               <%}%>
               <option value="-1">New category ..</option>
              </select>



               <div id="newCatContainer" class="form-check d-none">
                
                <label   class="newcategory " for="newcategory">New Category <label>
                <input type="text" name="newcategory" class="newcategory" >
              </div>


              <!-- Copy -->
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="materialContactFormCopy">
                <label class="form-check-label" for="materialContactFormCopy">Send me a copy of this message</label>
              </div>

              <!-- Send button -->
              <input type="file"  name="submitIt" multiple>
              <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect"
                type="submit" value= "upload" >Send</button>

            </form>
